<div class="flex justify-center items-center w-full">
  <div class="bg-white p-8 rounded-lg shadow-lg w-96 border border-gray-200">
    
    <!-- Header -->
    <h2 class="text-2xl font-semibold text-gray-800 text-center mb-4">
      Change Your Password
    </h2>
    <p class="text-sm text-gray-600 text-center mb-6">
      Enter a new password to update your credentials.
    </p>

    <!-- Form -->
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, class: "space-y-4") do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <!-- New Password Field -->
      <div class="flex flex-col">
        <%= f.label :password, "New Password", class: "text-gray-700 font-medium" %>
        <% if @minimum_password_length %>
          <p class="text-xs text-gray-500"><%= @minimum_password_length %> characters minimum</p>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password",
          class: "mt-1 p-3 w-full border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <!-- Confirm Password Field -->
      <div class="flex flex-col">
        <%= f.label :password_confirmation, "Confirm New Password", class: "text-gray-700 font-medium" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password",
          class: "mt-1 p-3 w-full border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <!-- Submit Button -->
      <div>
        <%= f.submit "Change My Password", 
          class: "w-full bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 rounded-lg transition duration-300" %>
      </div>
    <% end %>

    <!-- Links -->
    <div class="text-center mt-4">
      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>
